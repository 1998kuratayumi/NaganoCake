<div class="row">
	<div>商品詳細</div>
	<div>
		<%= attachment_image_tag(@item, :image, size: "180x130", fallback: "no_image.jpg") %>
	</div>
	<table class="table table-hover table-bordered table-condensed">
    <thead>
      <tr class="info">
        <th>商品名</th>
        <th>商品説明</th>
        <th>ジャンル</th>
        <th>税込み価格</th>
        <th>販売ステータス</th>
      </tr>
    </thead>
    <tbody>
				<tr>
          <td class="info col-xs-1">
            <%= @item.name %>
          </td>
          <td class="text-left">
            <%= @item.description %>
          </td>
          <td class="text-right col-xs-1">
            <%= @item.genre.name %>
          </td>
          <td class="text-left col-xs-3">
            ￥<%= (@item.no_tax_price*1.08).to_i %>
          </td>
          <td class="col-xs-2">
            <% if @item.is_active == true %>
    					<p>販売中</p>
    				<% elsif @item.is_active == false %>
    					<p>販売停止中</p>
    				<% end %>
          </td>
        </tr>
    </tbody>
    </table>
     <%= link_to "編集する", edit_admin_item_path(@item), class: 'glyphicon glyphicon-home btn btn-primary' %>

</div>