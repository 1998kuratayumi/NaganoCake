<h2>商品一覧</h2>
<div class="row">
  <div class="col-xs-10 col-xs-offset-1">
    <%= link_to new_admin_item_path, data: {"turbolinks" => false}, class: "btn btn-warning pull-right new_product" do %>
    <i class="fas fa-plus"></i>
    <% end %>
    <table class="table table-hover table-bordered table-condensed">
      <thead>
        <tr class="info">
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
				<% @items.each do |item| %>
  				<tr>
            <td class="info col-xs-1">
              <%= item.id %>
            </td>
            <td class="text-left">
              <%= link_to ｃｃｃｃｃｃｃｃｃｃｃｃｃｃ     <%= link_to ｃｃｃｃｃｃｃｃｃｃｃｃｃｃ, class: "btn-link" do %>
                <%= item.name %>
              <% end %>
            </td>
            <td class="text-right col-xs-1">
              ¥<%= item.no_tax_price %>
            </td>
            <td class="text-left col-xs-3">
              <%#= item.genre.name %>
            </td>
            <td class="col-xs-2">
              <% if item.is_active == true %>
      					<p>販売中</p>
      				<% elsif item.is_active == false %>
      					<p>販売停止中</p>
      				<% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
