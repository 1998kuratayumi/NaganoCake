<h2>注文履歴一覧</h2>
<div>
	<div>
		<table>
		  <thead>
		    <tr>
		      <th>購入日時</th>
	      	  <th>購入者</th>
		      <th>注文個数</th>
		      <th>注文ステータス</th>
		    </tr>
		  </thead>

		  <tbody>
		    <% @orders.each do |order| %>
		      <tr>
		        <td>
		          <%= link_to admin_order_path(order), data: {"turbolinks" => false} do %>
		          	<%= order.created_at.to_s(:datetime_jp) %>
		          <% end %>
		        </td>
		        <td>
		          <%= order.end_user.last_name %>
		          <%= order.end_user.first_name %>
		        </td>
		        <td>
		        <%= order.order_details.sum(:amount) %>
		        </td>
    	        <td>
    	      	  <%= order.status_i18n %>
     	        </td>
     	      </tr>
		    <% end %>
		  </tbody>
		</table>
	</div>
</div>
