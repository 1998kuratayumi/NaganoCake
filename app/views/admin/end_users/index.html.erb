<h2>会員一覧</h2>
<div>
  <div>
    <table>
      <thead>
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>

      <tbody>
        <% @end_users.each do |end_user| %>
          <tr>
            <td>
              <%= end_user.id %>
            </td>
            <td>
                <%= end_user.last_name+end_user.first_name %>
            </td>
            <td>
              <%= end_user.email %>
            </td>
            <td>
              <% if end_user.is_valid == false%>
                <p>退会済</p>
              <% else %>
                <p>有効</p>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
